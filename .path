#!/bin/bash

export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/local/git/bin"

# Jruby
export JRUBY="$HOME/.rvm/gems/jruby-1.7.11/bin"
export JRUBY_RUBIES="$HOME/.rvm/rubies/jruby-1.7.11/bin" 
export JRUBY_GLOBAL="$HOME/.rvm/gems/jruby-1.7.11@global/bin"

# RVM 
export RVM="$HOME/.rvm/bin"

# Android Path
export ANDROID_SDK="$HOME/Documents/android-sdk-macosx"
export ANDROID_TOOLS="$ANDROID_HOME/tools"
export ANDROID_PLATFORM_TOOLS="$ANDROID_HOME/platform-tools"

# Typesafe
export ACTIVATOR="$HOME/.activator"
export AKKA_HOME="$HOME/LIBRARIES/akka-2.4.1"

# Scala
export SCALA_HOME="$HOME/LIBRARIES/scala-2.11.7"

# My
export BIN_HOME=$HOME/bin

#NODE Path
export NODE_PATH=/usr/local/lib/node_modules

export PATH="$PATH:$JRUBY:$JRUBY_RUBIES:$JRUBY_GLOBAL:$RVM:$ANDROID_SDK:$ANDROID_TOOLS:$ANDROID_PLATFORM_TOOLS:$ACTIVATOR:$AKKA_HOME:$SCALA_HOME:$BIN_BIN:$NODE_PATH"

