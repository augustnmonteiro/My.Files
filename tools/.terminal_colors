#!bin/bash

#Is copied from http://git.io/vENN0

# Color variables

RED='\033[00;31m'
GREEN='\033[00;32m'
YELLOW='\033[00;33m'
BLUE='\033[00;34m'
WHITE='\033[01;37m'
BOLD='\033[00;0m'
NC=$'\e[0m'

# Functions

log() {
  printf "\n${WHITE}%s${NC}\n" "$*"
}

error() {
  printf "\n${RED}%s${NC}\n" "$*"
}

warning() {
  printf "\n${YELLOW}%s${NC}\n" "$*"
}

information() {
  printf "\n${BLUE}%s${NC}\n" "$*"
}

success() {
  printf "\n${GREEN}%s${NC}\n" "$*"
}

bold() {
  printf "\n${BOLD}%s${NC}\n" "$*"
}
